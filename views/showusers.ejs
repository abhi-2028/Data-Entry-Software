<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Users</title>
  <style>
  body {
    font-family: Arial, sans-serif;
    background: #f4f4f9;
    margin: 0;
    padding: 20px;
  }

  .container {
    max-width: 1000px;
    margin: auto;
    background: #fff;
    padding: 25px;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
  }

  h1 {
    text-align: center;
    color: #333;
    margin-bottom: 5px;
  }

  h3 {
    text-align: center;
    margin-bottom: 20px;
    color: #555;
  }

  .actions,
  .search-bar {
    text-align: center;
    margin-bottom: 20px;
  }

  /* ---------- SEARCH BAR ---------- */
  .search-input {
    padding: 10px 15px;
    width: 280px;
    max-width: 80%;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: 14px;
    outline: none;
    transition: border-color 0.3s ease;
  }
  .search-input:focus {
    border-color: #007BFF;
  }

  .search-btn {
    padding: 10px 18px;
    margin-left: 8px;
    background: #007BFF;
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    transition: background 0.3s ease;
  }
  .search-btn:hover {
    background: #004895;
  }

  /* ---------- GENERAL BUTTONS ---------- */
  .btn {
    display: inline-block;
    padding: 10px 16px;
    margin: 5px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: bold;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.2s;
  }
  .btn:hover {
    transform: scale(1.03);
  }

  .btn-primary {
    background: #007BFF;
    color: white;
  }
  .btn-primary:hover {
    background: #0056b3;
  }

  .btn-secondary {
    background: #6c757d;
    color: white;
  }
  .btn-secondary:hover {
    background: #545b62;
  }

  /* ---------- TABLE ---------- */
  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 10px;
    font-size: 14px;
  }

  th,
  td {
    padding: 12px;
    border: 1px solid #ddd;
    text-align: left;
  }

  th {
    background: #f4f4f4;
  }

  tr:nth-child(even) {
    background: #fafafa;
  }

  /* ---------- SMALL ACTION BUTTONS (Edit / Delete) ---------- */
  .btn-sm {
    font-size: 13px;
    font-weight: 500;
    border-radius: 5px;
    margin: 2px;
  }

  .btn-edit {
    background: #f1c40f;
    color: white;
  }
  .btn-edit:hover {
    background: #d4ac0d;
  }

  .btn-danger {
    background: #e74c3c;
    color: white;
  }
  .btn-danger:hover {
    background: #c0392b;
  }

  /* ---------- RESPONSIVE ---------- */
  @media (max-width: 768px) {
    .container {
      padding: 15px;
    }
    table, th, td {
      font-size: 12px;
      padding: 8px;
    }
    .btn, .btn-sm, .search-btn {
      font-size: 12px;
      padding: 6px 10px;
    }
    .search-input {
      width: 200px;
    }
  }
</style>

</head>

<body>
  <div class="container">
    <h1>All Users</h1>
    <h3>Total Users: <%= users.length %></h3>

    <!-- Search Bar -->
    <div class="search-bar">
      <form action="/users/search" method="get">
        <input type="text" name="search" class="search-input" placeholder="Search by username or email" required>
        <button type="submit" class="search-btn">Search</button>
      </form>
    </div>

    <!-- Action Buttons -->
    <div class="actions" style="text-align:center;">
      <a href="/users/new" class="btn btn-primary">‚ûï Add User</a>
      <a href="/home" class="btn btn-secondary">üè† Home</a>
    </div>

    <!-- Table -->
    <table>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      <% for (let user of users) { %>
      <tr>
        <td data-label="ID"><%= user.id %></td>
        <td data-label="Username"><%= user.username %></td>
        <td data-label="Email"><%= user.email %></td>
        <td data-label="Edit">
          <form action="/users/<%= user.id %>/edit" method="GET">
            <button class="btn btn-edit">Edit</button>
          </form>
        </td>
        <td data-label="Delete">
          <form action="/users/<%= user.id %>?_method=DELETE" method="POST"
            onsubmit="return confirm('Are you sure you want to delete this user?')">
            <button class="btn btn-danger">Delete</button>
          </form>
        </td>
      </tr>
      <% } %>
    </table>
  </div>
</body>

</html>
